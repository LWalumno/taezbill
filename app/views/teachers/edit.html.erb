<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4">
      <h3>Complete your profile</h3>
      <%= simple_form_for current_teacher do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :company_name, required: true %>
        <%= f.input :company_address, required: true %>
        <%= f.input :company_status, collection: Teacher::COMPANY_STATUS %>
        <%= f.input :siret, required: true %>
        <%= f.input :phone_number %>
        <%= f.input :lewagon_name, placeholder: "refers to this batch planning, e.g. \"tchret\"" %>
        <%= f.input :assistant %>
        <%= f.input :professor %>
        <div class="text-right">
          <%= f.submit "GO", class: "btn btn-xs btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
